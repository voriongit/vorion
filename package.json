{
  "name": "@vorion/platform",
  "version": "0.1.0",
  "description": "Vorion - Governed AI Execution Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/vorion/vorion.git"
  },
  "author": "Vorion, Inc.",
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "vitest run --dir tests/e2e",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "verify-setup": "tsx scripts/verify-setup.ts",
    "db:migrate": "node scripts/migrate.mjs",
    "db:seed": "tsx scripts/seed.ts",
    "docs:api": "typedoc --out docs/api src/index.ts"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.68.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.210.0",
    "@opentelemetry/sdk-node": "^0.210.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "ajv": "^8.12.0",
    "bullmq": "^4.12.2",
    "dayjs": "^1.11.10",
    "drizzle-orm": "^0.29.3",
    "fastify": "^4.26.0",
    "ioredis": "^5.3.2",
    "jsonpath-plus": "^8.0.0",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.0.4",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "drizzle-kit": "^0.20.13",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.0",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
