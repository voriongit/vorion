# Vorion Environment Configuration
# Copy this file to .env and update values

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Environment: development | staging | production
VORION_ENV=development

# Log level: debug | info | warn | error
VORION_LOG_LEVEL=debug

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API server port
VORION_API_PORT=3000

# API host
VORION_API_HOST=localhost

# API base path
VORION_API_BASE_PATH=/api/v1

# Request timeout (ms)
VORION_API_TIMEOUT=30000

# Rate limit (requests per minute)
VORION_API_RATE_LIMIT=1000

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection
VORION_DB_HOST=localhost
VORION_DB_PORT=5432
VORION_DB_NAME=vorion
VORION_DB_USER=vorion
VORION_DB_PASSWORD=change_me_in_production

# Connection pool
VORION_DB_POOL_MIN=5
VORION_DB_POOL_MAX=20

# =============================================================================
# REDIS
# =============================================================================

# Redis connection
VORION_REDIS_HOST=localhost
VORION_REDIS_PORT=6379
VORION_REDIS_PASSWORD=

# Redis database index
VORION_REDIS_DB=0

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT secret (generate with: openssl rand -base64 64)
VORION_JWT_SECRET=change_me_generate_secure_secret

# JWT expiration
VORION_JWT_EXPIRATION=1h

# Refresh token expiration
VORION_REFRESH_TOKEN_EXPIRATION=7d

# =============================================================================
# PROOF SYSTEM
# =============================================================================

# Proof storage backend: local | s3 | gcs
VORION_PROOF_STORAGE=local

# Local storage path
VORION_PROOF_LOCAL_PATH=./data/proofs

# S3 configuration (if using S3)
VORION_PROOF_S3_BUCKET=
VORION_PROOF_S3_REGION=
VORION_PROOF_S3_ACCESS_KEY=
VORION_PROOF_S3_SECRET_KEY=

# Proof retention days
VORION_PROOF_RETENTION_DAYS=2555

# =============================================================================
# TRUST ENGINE
# =============================================================================

# Trust score calculation interval (ms)
VORION_TRUST_CALC_INTERVAL=1000

# Trust score cache TTL (seconds)
VORION_TRUST_CACHE_TTL=30

# Trust decay rate (per day, 0-1)
VORION_TRUST_DECAY_RATE=0.01

# =============================================================================
# BASIS RULE ENGINE
# =============================================================================

# Rule evaluation timeout (ms)
VORION_BASIS_EVAL_TIMEOUT=100

# Max rules per namespace
VORION_BASIS_MAX_RULES=10000

# Rule cache enabled
VORION_BASIS_CACHE_ENABLED=true

# =============================================================================
# COGNIGATE
# =============================================================================

# Execution timeout (ms)
VORION_COGNIGATE_TIMEOUT=300000

# Max concurrent executions
VORION_COGNIGATE_MAX_CONCURRENT=100

# Resource limits
VORION_COGNIGATE_MAX_MEMORY_MB=512
VORION_COGNIGATE_MAX_CPU_PERCENT=50

# =============================================================================
# MONITORING
# =============================================================================

# Metrics endpoint enabled
VORION_METRICS_ENABLED=true

# Metrics port
VORION_METRICS_PORT=9090

# Health check endpoint
VORION_HEALTH_ENDPOINT=/health

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Webhook delivery
VORION_WEBHOOK_TIMEOUT=10000
VORION_WEBHOOK_RETRY_COUNT=3

# Email notifications
VORION_SMTP_HOST=
VORION_SMTP_PORT=587
VORION_SMTP_USER=
VORION_SMTP_PASSWORD=
VORION_SMTP_FROM=team@vorion.org

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
VORION_FEATURE_EXPERIMENTAL=false

# Enable debug endpoints
VORION_FEATURE_DEBUG_ENDPOINTS=false

# Enable distributed tracing
VORION_FEATURE_TRACING=false
