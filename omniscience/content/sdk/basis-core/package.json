{
  "name": "@basis-protocol/core",
  "version": "1.0.0",
  "description": "Core types, constants, and utilities for the BASIS AI governance standard",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "governance",
    "trust",
    "basis",
    "agents",
    "llm",
    "safety"
  ],
  "author": "Vorion <dev@vorion.org>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/vorion-protocol/basis-protocol.git",
    "directory": "packages/core"
  },
  "homepage": "https://vorion.org/basis",
  "bugs": {
    "url": "https://github.com/vorion-protocol/basis-protocol/issues"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
