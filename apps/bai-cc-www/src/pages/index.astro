    description: 'B2B platform for AI agent trust and compliance. Manage agent permissions, monitor behavior, and ensure regulatory compliance.',
    href: '/projects/agentanchor',
    status: 'live' as const,
    icon: '‚öì',
    liveUrl: 'https://app.agentanchorai.com',
    tags: ['B2B', 'Compliance', 'Dashboard'],
  },
  {
    title: 'ACI Specification',
    description: 'Agent Capability Interface standard for AI governance. Defines 6-tier trust levels (0-1000), behavioral scoring, and policy enforcement protocols. Published to npm.',
