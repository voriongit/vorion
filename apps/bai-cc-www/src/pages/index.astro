    url: 'https://app.agentanchorai.com',
    status: 'online' as const,
  },
  {
    title: 'Aurais Assistant',
    description: 'AI assistant with mission control',
    url: 'https://aurais.agentanchorai.com',
    status: 'online' as const,
  },
  {
    title: 'ACI Spec (npm)',
    description: '@vorionsys/aci-spec v1.1.0',
    url: 'https://www.npmjs.com/package/@vorionsys/aci-spec',
    status: 'online' as const,
  },
  {
    title: 'Cognigate API',
    description: 'Governance runtime endpoint',
    url: 'https://cognigate.dev',
    status: 'beta' as const,
  },
  {
