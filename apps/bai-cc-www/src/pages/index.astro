const packages = [
  {
    name: '@vorionsys/aci-spec',
    description: 'Agent Capability Interface specification - the open standard for AI governance. Published on npm.',
    features: [
      '6-tier trust levels (0-1000 scale)',
      'TrustBand, TRUST_THRESHOLDS, OBSERVATION_CEILINGS',
      '7 specification documents + OWASP guides',
      'TypeScript + ESM/CJS dual format',
    ],
  },
  {
    name: '@vorion/ai-gateway',
    description: 'Multi-provider AI routing with intelligent model selection, PII detection, and cost optimization.',
    features: [
      '4-tier routing: Privacy ‚Üí Task ‚Üí Green ‚Üí Cost',
      'Automatic PII detection and redaction',
      'Carbon-aware sustainable routing',
      'Support for OpenAI, Anthropic, Gemini, Ollama',
    ],
  },
  {
    name: '@vorion/council',
    description: '16-agent governance orchestration system for AI oversight, compliance, and quality assurance.',
    features: [
      'Master Planner for task decomposition',
      '4 parallel compliance agents (PII, ethics, policy)',
      'QA critique with revision loops',
      'Human-gateway escalation workflow',
    ],
  },
  {
    name: '@vorionsys/atsf-core',
    description: 'Core runtime for the Agentic Trust Scoring Framework with behavioral trust calculation.',
    features: [
      '6-tier trust levels per ACI spec',
      'Accelerated decay on failures',
      'Recovery mechanisms for trust restoration',
      'Event emission for observability',
    ],
