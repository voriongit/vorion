---
const currentYear = new Date().getFullYear();

const footerLinks = {
  projects: [
    { label: 'Vorion Platform', href: '/projects/vorion' },
    { label: 'AgentAnchor', href: '/projects/agentanchor' },
    { label: 'BASIS Standard', href: '/projects/basis' },
    { label: 'ATSF Framework', href: '/projects/atsf' },
    { label: 'Aurais', href: '/projects/aurais' },
  ],
  packages: [
    { label: '@vorion/ai-gateway', href: '/packages#ai-gateway' },
    { label: '@vorion/council', href: '/packages#council' },
    { label: '@vorion/atsf-core', href: '/packages#atsf-core' },
    { label: '@vorion/agent-sdk', href: '/packages#agent-sdk' },
  ],
  live: [
    { label: 'AgentAnchor App', href: 'https://app.agentanchorai.com', external: true },
    { label: 'Aurais Assistant', href: 'https://aurais.agentanchorai.com', external: true },
    { label: 'BASIS Standard', href: 'https://basis.vorion.org', external: true },
  ],
};
---

<footer class="border-t border-slate-800 bg-slate-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-4">
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-vorion-500 to-accent-cyan flex items-center justify-center">
            <span class="text-white font-bold text-sm">BC</span>
          </div>
          <span class="font-semibold text-white">BAI Command Center</span>
        </a>
        <p class="text-sm text-slate-400 leading-relaxed">
          Building the future of AI governance. Trust, compliance, and oversight for autonomous AI systems.
        </p>
      </div>

      <!-- Projects -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-4">Projects</h3>
        <ul class="space-y-2">
          {footerLinks.projects.map(link => (
            <li>
              <a href={link.href} class="text-sm text-slate-400 hover:text-vorion-400 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Packages -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-4">Packages</h3>
        <ul class="space-y-2">
          {footerLinks.packages.map(link => (
            <li>
              <a href={link.href} class="text-sm text-slate-400 hover:text-vorion-400 transition-colors font-mono">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Live Sites -->
      <div>
        <h3 class="text-sm font-semibold text-white mb-4">Live Sites</h3>
        <ul class="space-y-2">
          {footerLinks.live.map(link => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-slate-400 hover:text-vorion-400 transition-colors inline-flex items-center gap-1"
              >
                {link.label}
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="mt-12 pt-8 border-t border-slate-800 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-slate-500">
        &copy; {currentYear} BAI Command Center. Part of the Vorion AI Governance Platform.
      </p>
      <div class="flex items-center gap-4">
        <a
          href="https://github.com/voriongit"
          target="_blank"
          rel="noopener noreferrer"
          class="text-slate-500 hover:text-white transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
