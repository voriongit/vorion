  "escalation_chains": [
    {
      "name": "security-escalation",
      "description": "Escalation chain for security incidents",
      "chain": [
        {"level": 1, "type": "team_lead", "target": "Security Shepherd"},
        {"level": 2, "type": "team", "target": "security-services"},
        {"level": 3, "type": "council", "target": "safety-council"},
        {"level": 4, "type": "council", "target": "incident-council"}
      ],
      "triggers": ["security_incident", "vulnerability_found", "breach_detected"],
      "sla_by_level": {"1": "15m", "2": "30m", "3": "1h", "4": "immediate"}
    },
    {
      "name": "ethics-escalation",
      "description": "Escalation chain for ethical concerns",
      "chain": [
        {"level": 1, "type": "agent", "target": "AI Ethics Attorney"},
        {"level": 2, "type": "council", "target": "ethics-council"},
        {"level": 3, "type": "agent", "target": "Chief AI Officer"}
      ],
      "triggers": ["ethical_concern", "bias_detected", "harm_potential"],
      "sla_by_level": {"1": "1h", "2": "4h", "3": "24h"}
    },
    {
      "name": "compliance-escalation",
      "description": "Escalation chain for compliance issues",
      "chain": [
        {"level": 1, "type": "team", "target": "compliance-team"},
        {"level": 2, "type": "council", "target": "compliance-council"},
        {"level": 3, "type": "team", "target": "legal-team"}
      ],
      "triggers": ["compliance_violation", "regulatory_inquiry", "audit_finding"],
      "sla_by_level": {"1": "4h", "2": "24h", "3": "48h"}
    },
    {
      "name": "customer-escalation",
      "description": "Escalation chain for customer issues",
      "chain": [
        {"level": 1, "type": "agent", "target": "Escalation Manager"},
        {"level": 2, "type": "team", "target": "customer-success"},
        {"level": 3, "type": "agent", "target": "Chief AI Officer"}
      ],
      "triggers": ["customer_complaint", "sla_breach", "churn_risk"],
      "sla_by_level": {"1": "30m", "2": "2h", "3": "8h"}
    },
    {
      "name": "four-pillars-violation",
      "description": "Escalation chain for Four Pillars violations",
      "chain": [
        {"level": 1, "type": "council", "target": "ethics-council"},
        {"level": 2, "type": "council", "target": "safety-council"},
        {"level": 3, "type": "agent", "target": "Chief AI Officer"}
      ],
      "triggers": ["truth_violation", "honesty_violation", "service_violation", "humanity_violation"],
      "sla_by_level": {"1": "immediate", "2": "1h", "3": "4h"}
    }
  ]
}
