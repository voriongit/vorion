{
  "meta": {
    "version": "1.0",
    "description": "Team and Council definitions for the A3I ecosystem"
  },
  "councils": [
    {
      "name": "safety-council",
      "display_name": "Safety Council",
      "type": "council",
      "purpose": "Ensure no AI action causes harm to humans, systems, or society",
      "responsibilities": [
        "Review high-risk AI deployments",
        "Set safety standards and thresholds",
        "Investigate safety incidents",
        "Approve safety-critical changes"
      ],
      "authority_level": 10,
      "can_approve": ["safety_exceptions", "high_risk_deployments", "emergency_shutdowns"],
      "quorum_required": 3,
      "decision_method": "consensus"
    },
    {
      "name": "ethics-council",
      "display_name": "Ethics Council",
      "type": "council",
      "purpose": "Provide moral guidance and ensure AI actions align with human values",
      "responsibilities": [
        "Define ethical guidelines",
        "Review ethically complex decisions",
        "Advise on value tradeoffs",
        "Steward the Soul Document"
      ],
      "authority_level": 10,
      "can_approve": ["ethics_exceptions", "value_tradeoffs", "soul_doc_amendments"],
      "quorum_required": 3,
      "decision_method": "consensus"
    },
    {
      "name": "compliance-council",
      "display_name": "Compliance Council",
      "type": "council",
      "purpose": "Ensure adherence to laws, regulations, and standards",
      "responsibilities": [
        "Monitor regulatory changes",
        "Set compliance requirements",
        "Review compliance exceptions",
        "Coordinate audit responses"
      ],
      "authority_level": 9,
      "can_approve": ["compliance_exceptions", "regulatory_interpretations"],
      "quorum_required": 2,
      "decision_method": "majority"
    },
    {
      "name": "architecture-council",
      "display_name": "Architecture Council",
      "type": "council",
      "purpose": "Define and maintain technical standards and architecture",
      "responsibilities": [
        "Set technical standards",
        "Review architectural changes",
        "Approve new integrations",
        "Manage technical debt"
      ],
      "authority_level": 8,
      "can_approve": ["architecture_changes", "new_technologies", "integration_patterns"],
      "quorum_required": 3,
      "decision_method": "consensus"
    },
    {
      "name": "finance-council",
      "display_name": "Finance Council",
      "type": "council",
      "purpose": "Manage resource allocation and financial decisions",
      "responsibilities": [
        "Approve budgets",
        "Review cost allocations",
        "Set financial policies",
        "Monitor spending"
      ],
      "authority_level": 8,
      "can_approve": ["budget_changes", "major_purchases", "pricing_changes"],
      "quorum_required": 2,
      "decision_method": "majority"
    },
    {
      "name": "people-council",
      "display_name": "People Council",
      "type": "council",
      "purpose": "Oversee human-related concerns and organizational health",
      "responsibilities": [
        "Set people policies",
        "Review HR decisions",
        "Manage culture initiatives",
        "Oversee training programs"
      ],
      "authority_level": 8,
      "can_approve": ["policy_changes", "org_changes", "culture_initiatives"],
      "quorum_required": 2,
      "decision_method": "consensus"
    },
    {
      "name": "innovation-council",
      "display_name": "Innovation Council",
      "type": "council",
      "purpose": "Guide future direction and emerging capabilities",
      "responsibilities": [
        "Evaluate new technologies",
        "Sponsor innovation projects",
        "Set R&D priorities",
        "Review capability roadmap"
      ],
      "authority_level": 7,
      "can_approve": ["innovation_projects", "r_and_d_investments", "capability_experiments"],
      "quorum_required": 3,
      "decision_method": "majority"
    },
    {
      "name": "incident-council",
      "display_name": "Incident Council",
      "type": "incident",
      "purpose": "Coordinate crisis response and incident management",
      "responsibilities": [
        "Declare incidents",
        "Coordinate response teams",
        "Make emergency decisions",
        "Conduct post-mortems"
      ],
      "authority_level": 10,
      "can_approve": ["emergency_actions", "incident_declarations", "emergency_shutdowns"],
      "quorum_required": 1,
      "decision_method": "lead_decides"
    }
  ],
