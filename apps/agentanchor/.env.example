# ==============================================
# AI Bot Builder Platform - Environment Variables
# ==============================================

# Application
NEXT_PUBLIC_ENV=development
NEXT_PUBLIC_APP_NAME=AgentAnchor
NEXT_PUBLIC_APP_URL=http://localhost:3000
PORT=3000

# URLs (Production defaults if not set)
# NEXT_PUBLIC_APP_URL - Main app URL (default: https://app.agentanchorai.com)
# NEXT_PUBLIC_MARKETING_URL - Marketing site (default: https://agentanchorai.com)
# NEXT_PUBLIC_API_URL - API endpoint (default: same as APP_URL)
# NEXT_PUBLIC_DOCS_URL - Documentation (default: MARKETING_URL/docs)
NEXT_PUBLIC_MARKETING_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_DOCS_URL=http://localhost:3001/docs
SUPPORT_EMAIL=support@agentanchorai.com
ENTERPRISE_EMAIL=enterprise@agentanchorai.com

# Supabase (Auth only)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require
DATABASE_URL_UNPOOLED=postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require

# Pusher (Realtime)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=us2
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=1.0

# Rate Limiting (Upstash Redis)
RATE_LIMIT_ENABLED=true
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Monitoring (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=info

# Feature Flags
FEATURE_MCP_SERVERS=false
FEATURE_TEAM_CHAT=false
FEATURE_PUBLIC_BOTS=true
FEATURE_API_KEYS=false

# Security
# CORS_ORIGINS - Comma-separated list of allowed origins
# - Development: defaults to localhost:3000, localhost:3001, 127.0.0.1:3000
# - Production: defaults to agentanchorai.com domains
# - Set explicitly for custom domains (no wildcards in production!)
# Example: CORS_ORIGINS=https://myapp.com,https://api.myapp.com
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE=1mb

# ==============================================
# Setup Instructions:
# ==============================================
#
# 1. Copy this file to .env.local:
#    cp .env.example .env.local
#
# 2. Fill in your actual values
#
# 3. Never commit .env.local to git!
#
# ==============================================
