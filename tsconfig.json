{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDirs": ["./src", "./packages/contracts/src"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@vorion/basis/*": ["src/basis/*"],
      "@vorion/cognigate/*": ["src/cognigate/*"],
      "@vorion/enforce/*": ["src/enforce/*"],
      "@vorion/intent/*": ["src/intent/*"],
      "@vorion/proof/*": ["src/proof/*"],
      "@vorion/trust-engine/*": ["src/trust-engine/*"],
      "@vorion/api/*": ["src/api/*"],
      "@vorion/common/*": ["src/common/*"],
      "@vorion/contracts": ["packages/contracts/src/index.ts"],
      "@vorion/contracts/*": ["packages/contracts/src/*"],
      "@vorion/contracts/canonical": ["packages/contracts/src/canonical/index.ts"],
      "@vorion/contracts/v2": ["packages/contracts/src/v2/index.ts"],
      "@vorion/contracts/aci": ["packages/contracts/src/aci/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
