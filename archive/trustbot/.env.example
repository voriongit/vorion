# TrustBot Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE (Database)
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_ANON_KEY=eyJhbGc...your-anon-key-here

# Optional: Service role key for admin operations
# SUPABASE_SERVICE_KEY=eyJhbGc...your-service-key-here

# =============================================================================
# CLAUDE API (for agent reasoning)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...your-key-here

# =============================================================================
# SERVER
# =============================================================================
PORT=3003
NODE_ENV=development

# =============================================================================
# SECURITY (Required for Production)
# =============================================================================
# Human operator master key - used for authentication
# Generate with: node -e "console.log(require('crypto').randomUUID())"
# MASTER_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Token signing secret - 64 hex characters (256 bits)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# TOKEN_SECRET=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Allowed CORS origins (comma-separated)
# ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# =============================================================================
# OPTIONAL: Analytics / Monitoring
# =============================================================================
# SENTRY_DSN=
# POSTHOG_KEY=
